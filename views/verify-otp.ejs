<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title>Login Screen</title>
    <link rel="stylesheet" href="/css/style.css" />
</head>
<body>

    
    <div id="main">
       
       <div class="left">
        <div class="logo">
            <img src="./images/Logo.png" alt="logo file" />
        </div>
        <div class="para">
            <p>Gujrat's largest Digital Screen Network</p>
        </div>
       </div>
       
      <div class="right">
        
          <form action="/verify-otp" method="POST">
          <div class="details" style="height: 500px;width: 90%;">
            
            <div class="para1">
                <p>Verify OTP</p>
            </div>
            <div class="para2">
                <p style="padding-left: 65px;">We just send verification code To your email hp9537213@gmail.com  </p>
            </div>
            <div class="emailField">
                <label for="otp">OTP:</label>
                <!-- <input type="email" placeholder="Enter Email" name="username" required /> -->
                <input style="padding-right: 5px; width: 300px;" type="text" id="otp" placeholder="Enter OTP" name="otp" required>
            </div>
            
            <div class="btn">
                <!-- <input type="submit" value="Sign In" /> -->
                <button type="submit">Verify</button>
            </div>
            <% if (error_msg) { %>
                <p style="color: red;"><%= error_msg %></p>
            <% } %> 
           </div>
        </form>
      </div>
    </div>

</body>
</html>





